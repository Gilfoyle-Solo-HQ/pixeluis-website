<% content_for(:title) { "Podcasts" } %>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Podcast Episodes</h1>
    <p class="text-gray-600 mb-12">Conversations, interviews, and insights.</p>

    <% if @episodes.any? %>
      <div class="space-y-8">
        <% @episodes.each do |episode| %>
          <div class="bg-white border border-gray-200 rounded-xl p-6">
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-xl font-semibold text-gray-900"><%= episode.title %></h2>
              <% if episode.platform.present? %>
                <span class="text-xs font-medium bg-indigo-50 text-indigo-700 px-2 py-1 rounded-full"><%= episode.platform %></span>
              <% end %>
            </div>
            <p class="text-gray-600 mb-4"><%= episode.description %></p>
            <% if episode.published_at.present? %>
              <p class="text-sm text-gray-400 mb-4"><%= episode.published_at.strftime("%B %d, %Y") %></p>
            <% end %>
            <% if episode.embed_url.present? %>
              <div class="mt-4">
                <iframe src="<%= episode.embed_url %>" width="100%" height="232" frameborder="0" allowtransparency="true" allow="encrypted-media" class="rounded-lg"></iframe>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-xl">
        <p class="text-gray-500">No episodes yet. Check back soon!</p>
      </div>
    <% end %>
  </div>
</section>
