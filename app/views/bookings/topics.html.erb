<% content_for(:title) { "Choose a Topic" } %>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <%= link_to "← Back", book_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
      <h1 class="text-3xl font-bold text-gray-900 mt-4">Choose a Consultation Topic</h1>
      <p class="text-gray-600 mt-2">Select the type of session you'd like to book.</p>
    </div>

    <% if @topics.any? %>
      <div class="grid md:grid-cols-2 gap-6">
        <% @topics.each do |topic| %>
          <div class="bg-white border border-gray-200 rounded-xl p-6 hover:border-indigo-300 transition-colors">
            <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= topic.name %></h2>
            <p class="text-gray-600 mb-4"><%= topic.description %></p>
            <div class="flex items-center justify-between">
              <div>
                <span class="text-2xl font-bold text-gray-900"><%= topic.formatted_price %></span>
                <span class="text-gray-500 text-sm ml-1"><%= topic.duration_minutes %> min</span>
              </div>
              <%= link_to "Select →", book_times_path(topic), class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-xl">
        <p class="text-gray-500">No consultation topics available yet.</p>
      </div>
    <% end %>
  </div>
</section>
