<% content_for(:title) { "Booking Confirmed" } %>

<section class="py-24">
  <div class="max-w-xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="text-5xl mb-6">âœ…</div>
    <h1 class="text-3xl font-bold text-gray-900 mb-4">You're All Set!</h1>
    <p class="text-gray-600 mb-8">
      Your consultation has been booked successfully.
      <% if @booking %>
        We'll send a confirmation to <strong><%= @booking.email %></strong>.
      <% end %>
    </p>
    <div class="bg-gray-50 rounded-xl p-6 mb-8 text-left">
      <% if @booking %>
        <div class="space-y-2">
          <p><strong>Topic:</strong> <%= @booking.consultation_topic.name %></p>
          <p><strong>Time:</strong> <%= @booking.time_slot.formatted_time %></p>
          <p><strong>Status:</strong> <span class="text-green-600 font-medium"><%= @booking.status.capitalize %></span></p>
        </div>
      <% end %>
    </div>
    <%= link_to "Back to Home", root_path, class: "text-indigo-600 font-medium hover:text-indigo-700" %>
  </div>
</section>
