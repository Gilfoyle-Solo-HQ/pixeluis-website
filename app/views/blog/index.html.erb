<% content_for(:title) { "Blog" } %>

<section class="py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
    <p class="text-gray-600 mb-12">Thoughts, insights, and practical advice.</p>

    <% if @posts.any? %>
      <div class="space-y-8">
        <% @posts.each do |post| %>
          <%= link_to blog_post_path(slug: post.slug), class: "block group" do %>
            <article class="bg-white border border-gray-200 rounded-xl p-6 hover:border-indigo-300 transition-colors">
              <h2 class="text-xl font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors mb-2">
                <%= post.title %>
              </h2>
              <% if post.published_at.present? %>
                <p class="text-sm text-gray-400"><%= post.published_at.strftime("%B %d, %Y") %></p>
              <% end %>
            </article>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-xl">
        <p class="text-gray-500">No posts yet. Check back soon!</p>
      </div>
    <% end %>
  </div>
</section>
