<% content_for(:title) { @post.title } %>

<article class="py-16">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="mb-8">
      <%= link_to "â† Back to Blog", blog_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
      <h1 class="text-4xl font-bold text-gray-900 mt-4 mb-2"><%= @post.title %></h1>
      <% if @post.published_at.present? %>
        <p class="text-gray-400"><%= @post.published_at.strftime("%B %d, %Y") %></p>
      <% end %>
    </header>
    <div class="prose prose-lg max-w-none">
      <%= @post.body %>
    </div>
  </div>
</article>
