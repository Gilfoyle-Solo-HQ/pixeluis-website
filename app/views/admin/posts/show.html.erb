<% content_for(:page_title) { @post.title } %>

<div class="mb-6 flex items-center justify-between">
  <div class="flex items-center gap-3">
    <%= link_to "â† All Posts", admin_posts_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
    <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full <%= @post.published? ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' %>">
      <%= @post.published? ? 'Published' : 'Draft' %>
    </span>
  </div>
  <div class="flex items-center gap-3">
    <%= link_to "Edit", edit_admin_post_path(@post), class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
    <%= button_to "Delete", admin_post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors" %>
  </div>
</div>

<div class="bg-white border border-gray-200 rounded-xl p-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= @post.title %></h1>
  <% if @post.published_at.present? %>
    <p class="text-sm text-gray-400 mb-6"><%= @post.published_at.strftime("%B %d, %Y") %></p>
  <% end %>
  <div class="prose max-w-none">
    <%= @post.body %>
  </div>
</div>
