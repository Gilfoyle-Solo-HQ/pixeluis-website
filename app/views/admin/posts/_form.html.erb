<%= form_with(model: [:admin, post], class: "space-y-6") do |f| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <p class="text-sm text-red-700 font-medium"><%= pluralize(post.errors.count, "error") %> prevented this post from being saved:</p>
      <ul class="list-disc list-inside text-sm text-red-600 mt-2">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.rich_text_area :body, class: "w-full" %>
  </div>

  <div class="flex items-center gap-6">
    <div class="flex items-center gap-2">
      <%= f.check_box :published, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
      <%= f.label :published, "Published", class: "text-sm text-gray-700" %>
    </div>
    <div>
      <%= f.label :published_at, class: "text-sm font-medium text-gray-700 mr-2" %>
      <%= f.datetime_local_field :published_at, class: "border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div>
    <%= f.submit class: "px-6 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
  </div>
<% end %>
