<% content_for(:page_title) { "Time Slots" } %>

<div class="flex justify-between items-center mb-6">
  <p class="text-sm text-gray-500"><%= @time_slots.count %> upcoming slots</p>
  <%= link_to "New Time Slot", new_admin_time_slot_path, class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
</div>

<div class="bg-white border border-gray-200 rounded-xl">
  <% if @time_slots.any? %>
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Topic</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Date & Time</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="text-right px-6 py-3 text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @time_slots.each do |slot| %>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-900"><%= slot.consultation_topic.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= slot.formatted_time %></td>
            <td class="px-6 py-4">
              <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full <%= slot.booked? ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                <%= slot.booked? ? 'Booked' : 'Available' %>
              </span>
            </td>
            <td class="px-6 py-4 text-right space-x-3">
              <%= link_to "Edit", edit_admin_time_slot_path(slot), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
              <%= button_to "Delete", admin_time_slot_path(slot), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm text-red-600 hover:text-red-700 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500 text-sm">No time slots yet.</div>
  <% end %>
</div>
