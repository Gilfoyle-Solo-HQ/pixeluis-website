<% content_for(:page_title) { "Podcast Episodes" } %>

<div class="flex justify-between items-center mb-6">
  <p class="text-sm text-gray-500"><%= @episodes.count %> episodes</p>
  <%= link_to "New Episode", new_admin_podcast_episode_path, class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
</div>

<div class="bg-white border border-gray-200 rounded-xl">
  <% if @episodes.any? %>
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Platform</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Published</th>
          <th class="text-right px-6 py-3 text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @episodes.each do |episode| %>
          <tr>
            <td class="px-6 py-4">
              <%= link_to episode.title, admin_podcast_episode_path(episode), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= episode.platform || "—" %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= episode.published_at&.strftime("%b %d, %Y") || "—" %></td>
            <td class="px-6 py-4 text-right">
              <%= link_to "Edit", edit_admin_podcast_episode_path(episode), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500 text-sm">No episodes yet.</div>
  <% end %>
</div>
