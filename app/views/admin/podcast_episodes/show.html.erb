<% content_for(:page_title) { @episode.title } %>

<div class="mb-6 flex items-center justify-between">
  <%= link_to "â† All Episodes", admin_podcast_episodes_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
  <div class="flex items-center gap-3">
    <%= link_to "Edit", edit_admin_podcast_episode_path(@episode), class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
    <%= button_to "Delete", admin_podcast_episode_path(@episode), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors" %>
  </div>
</div>

<div class="bg-white border border-gray-200 rounded-xl p-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= @episode.title %></h1>
  <p class="text-sm text-gray-400 mb-4"><%= @episode.platform %> &middot; <%= @episode.published_at&.strftime("%B %d, %Y") %></p>
  <p class="text-gray-600 mb-6"><%= @episode.description %></p>
  <% if @episode.embed_url.present? %>
    <iframe src="<%= @episode.embed_url %>" width="100%" height="232" frameborder="0" class="rounded-lg"></iframe>
  <% end %>
</div>
