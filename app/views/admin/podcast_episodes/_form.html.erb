<%= form_with(model: [:admin, episode], class: "space-y-6") do |f| %>
  <% if episode.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-sm text-red-600">
        <% episode.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= f.label :embed_url, "Embed URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.url_field :embed_url, placeholder: "https://open.spotify.com/embed/...", class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :platform, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :platform, options_for_select(["Spotify", "Apple Podcasts", "YouTube", "Other"], episode.platform), { include_blank: "Select platform" }, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.label :published_at, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.datetime_local_field :published_at, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div>
    <%= f.submit class: "px-6 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
  </div>
<% end %>
