<% content_for(:page_title) { "Consultation Topics" } %>

<div class="flex justify-between items-center mb-6">
  <p class="text-sm text-gray-500"><%= @topics.count %> topics</p>
  <%= link_to "New Topic", new_admin_consultation_topic_path, class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
</div>

<div class="bg-white border border-gray-200 rounded-xl">
  <% if @topics.any? %>
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Price</th>
          <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Duration</th>
          <th class="text-right px-6 py-3 text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @topics.each do |topic| %>
          <tr>
            <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= topic.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= topic.formatted_price %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= topic.duration_minutes %> min</td>
            <td class="px-6 py-4 text-right space-x-3">
              <%= link_to "Edit", edit_admin_consultation_topic_path(topic), class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
              <%= button_to "Delete", admin_consultation_topic_path(topic), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-sm text-red-600 hover:text-red-700 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500 text-sm">No topics yet.</div>
  <% end %>
</div>
