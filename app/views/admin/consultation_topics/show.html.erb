<% content_for(:page_title) { @topic.name } %>

<div class="mb-6 flex items-center justify-between">
  <%= link_to "â† All Topics", admin_consultation_topics_path, class: "text-sm text-indigo-600 hover:text-indigo-700 font-medium" %>
  <div class="flex items-center gap-3">
    <%= link_to "Edit", edit_admin_consultation_topic_path(@topic), class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors" %>
    <%= button_to "Delete", admin_consultation_topic_path(@topic), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 transition-colors" %>
  </div>
</div>

<div class="bg-white border border-gray-200 rounded-xl p-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= @topic.name %></h1>
  <p class="text-gray-600 mb-4"><%= @topic.description %></p>
  <div class="flex gap-4 text-sm text-gray-500">
    <span><strong>Price:</strong> <%= @topic.formatted_price %></span>
    <span><strong>Duration:</strong> <%= @topic.duration_minutes %> minutes</span>
  </div>
</div>
