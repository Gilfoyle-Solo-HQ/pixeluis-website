<%= form_with(model: [:admin, topic], class: "space-y-6") do |f| %>
  <% if topic.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <ul class="list-disc list-inside text-sm text-red-600">
        <% topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :price_cents, "Price (cents)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :price_cents, min: 0, step: 1, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.label :duration_minutes, "Duration (minutes)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :duration_minutes, min: 15, step: 15, class: "w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div>
    <%= f.submit class: "px-6 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors cursor-pointer" %>
  </div>
<% end %>
