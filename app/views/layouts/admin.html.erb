<!DOCTYPE html>
<html>
  <head>
    <title>Admin - <%= content_for(:title) || "Starter Website" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-gray-900 text-white flex-shrink-0">
        <div class="p-6">
          <h1 class="text-lg font-bold">Admin Panel</h1>
          <p class="text-gray-400 text-xs mt-1">Starter Website</p>
        </div>
        <nav class="px-4 space-y-1">
          <%= link_to "Dashboard", admin_root_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path == '/admin' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <%= link_to "Blog Posts", admin_posts_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path.start_with?('/admin/posts') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <%= link_to "Podcast Episodes", admin_podcast_episodes_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path.start_with?('/admin/podcast') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <%= link_to "Consultation Topics", admin_consultation_topics_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path.start_with?('/admin/consultation') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <%= link_to "Time Slots", admin_time_slots_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path.start_with?('/admin/time_slots') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <%= link_to "Bookings", admin_bookings_path, class: "block px-3 py-2 rounded-lg text-sm font-medium #{request.path.start_with?('/admin/bookings') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" %>
          <div class="border-t border-gray-700 my-4"></div>
          <%= link_to "View Site", root_path, class: "block px-3 py-2 rounded-lg text-sm font-medium text-gray-300 hover:bg-gray-800 hover:text-white" %>
          <%= button_to "Log Out", session_path, method: :delete, class: "block w-full text-left px-3 py-2 rounded-lg text-sm font-medium text-gray-300 hover:bg-gray-800 hover:text-white" %>
        </nav>
      </aside>

      <!-- Main content -->
      <div class="flex-1 flex flex-col">
        <header class="bg-white border-b border-gray-200 px-8 py-4">
          <h2 class="text-lg font-semibold text-gray-900"><%= yield :page_title %></h2>
        </header>

        <% if notice.present? %>
          <div class="px-8 pt-4">
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg text-sm">
              <%= notice %>
            </div>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="px-8 pt-4">
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm">
              <%= alert %>
            </div>
          </div>
        <% end %>

        <main class="flex-1 px-8 py-6">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
