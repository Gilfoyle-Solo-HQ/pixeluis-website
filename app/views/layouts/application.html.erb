<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Pixeluis" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Pixeluis">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', function() {
        const burger = document.querySelector('.burger-menu');
        const sidebar = document.querySelector('.sidebar');
        
        if (burger) {
          burger.addEventListener('click', function() {
            this.classList.toggle('active');
            sidebar.classList.toggle('active');
          });
        }
        
        // Close menu when clicking a link
        const navLinks = document.querySelectorAll('.sidebar-nav a');
        navLinks.forEach(link => {
          link.addEventListener('click', function() {
            burger.classList.remove('active');
            sidebar.classList.remove('active');
          });
        });
      });
    </script>
  </head>

  <body>
    <!-- Mobile Header -->
    <header class="mobile-header">
      <div class="mobile-logo">PIXELUIS.</div>
      <div class="burger-menu">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </header>

    <div class="layout-container">
      <!-- Sidebar Navigation -->
      <aside class="sidebar">
        <div class="sidebar-logo">
          <%= link_to root_path do %>
            PIXELUIS.
          <% end %>
        </div>
        
        <nav class="sidebar-nav">
          <ul>
            <li><%= link_to "Home", "#home", class: "active" %></li>
            <li><%= link_to "Projects", "#projects" %></li>
            <li><%= link_to "About", "#about" %></li>
            <li><%= link_to "Testimonials", "#testimonials" %></li>
            <li><%= link_to "Podcasts", "#podcasts" %></li>
            <li><%= link_to "Contact", "#contact" %></li>
          </ul>
        </nav>
        
        <div class="sidebar-footer">
          <%= link_to "Book a Call", "#contact", class: "sidebar-cta" %>
        </div>
      </aside>

      <!-- Main Content Area -->
      <div class="main-content">
        <% if notice.present? %>
          <div class="flash-messages">
            <div class="flash-notice"><%= notice %></div>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="flash-messages">
            <div class="flash-alert"><%= alert %></div>
          </div>
        <% end %>

        <main>
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
